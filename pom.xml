  <build>
    <!--  TODO: These should be parametrized. -->
    <finalName>oxygen-sdk-sample-webapp</finalName>
    <plugins>
      <plugin>
        <groupId>org.eclipse.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>${jettyVersion}</version>
        <configuration>
   <!--       <jettyXml>${basedir}/jetty.xml</jettyXml>
          <webAppSourceDirectory>${basedir}</webAppSourceDirectory>-->
          <connectors>
            <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
              <!-- Choose HTTP port -->
              <port>8001</port>
              <!-- 8001 vs 8088 -->
              <maxIdleTime>60000</maxIdleTime>
            </connector>
          </connectors>
          <!-- Key and port for stopping Jetty -->
          <stopKey>keyToStopJetty</stopKey>
          <stopPort>8985</stopPort>
          <!-- 8985  vs 8986-->
          
          <!-- TODO: why is this setting ignored?
                     temporarily moved to default folder /src/main/resources/log4j.xml
                     <systemProperties>
                      <systemProperty>
                        <name>log4j.configuration</name>
                        <value>${basedir}/WEB-INF/log4j.xml</value>
                      </systemProperty>
                    </systemProperties> -->
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <outputFileNameMapping>@{artifactId}@@{dashClassifier?}@.@{extension}@</outputFileNameMapping>
          <overlays>
            <!-- Add the contents of the oxygen-webapp. -->
            <overlay>
              <groupId>com.oxygenxml</groupId>
              <artifactId>oxygen-webapp</artifactId>
              <excludes>
                <exclude>WEB-INF/classes/ro/sync</exclude>
                <exclude>WEB-INF/frameworks.zip</exclude>
                <exclude>WEB-INF/options.zip</exclude>
                <exclude>WEB-INF/plugins.zip</exclude>
                <exclude>WEB-INF/lib/</exclude>
              </excludes>
            </overlay>
            
           <!-- <!-\- Add the frameworks directories. -\->
            <overlay>
              <groupId>${project.parent.groupId}</groupId>
              <artifactId>bundle-frameworks</artifactId>
              <type>jar</type>
              <targetPath>WEB-INF/</targetPath>
            </overlay>
            
            <!-\- Add the options directories. -\->
            <overlay>
              <groupId>${project.parent.groupId}</groupId>
              <artifactId>bundle-options</artifactId>
              <type>jar</type>
              <targetPath>WEB-INF/</targetPath>
            </overlay>
            
            <!-\- Add the plugins. -\->
            <overlay>
              <groupId>${project.parent.groupId}</groupId>
              <artifactId>bundle-plugins</artifactId>
              <type>jar</type>
              <targetPath>WEB-INF/</targetPath>
            </overlay>
            
            <!-\- Add the samples directory. -\->
            <overlay>
              <groupId>${project.parent.groupId}</groupId>
              <artifactId>bundle-samplefiles</artifactId>
              <type>jar</type>
              <targetPath>samples/</targetPath>
              <includes>
                <include>dita/**</include>
              </includes>
              <excludes>
                <exclude>META-INF/**</exclude>
              </excludes>
            </overlay>-->
          </overlays>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>

    <profile>
      <id>start</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.4.0</version>
            <configuration>
              <mainClass>org.basex.BaseXHTTP</mainClass>
              <arguments>
                <argument>-h8984</argument>
                <argument>-s9895</argument>
                <argument>-p1984</argument>
                <!--
                <argument>-Urestxq</argument>
                <argument>-Prestxq</argument>
                -->
              </arguments>
           <!--   <systemProperties>
                <systemProperty>
                  <key>exiftool-exe</key>
                  <value>${exiftool-exe}</value>
                </systemProperty>
              </systemProperties>-->
            </configuration>
          </plugin>
          
        </plugins>
      </build>
    </profile>
    
    <profile>
      <id>stop</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.4.0</version>
            <configuration>
              <mainClass>org.basex.BaseXHTTP</mainClass>
              <arguments>
                <argument>-h8984</argument>
                <argument>-s9895</argument>
                <argument>-p9897</argument>
                <argument>stop</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>init-empty</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.4.0</version>
            <configuration>
              <mainClass>org.basex.BaseX</mainClass>
              <arguments>
                <argument>-v</argument>
                <argument>init-empty.bxs</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
   

  
  
    <profile>
      <id>gui</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.4.0</version>
            <configuration>
              <mainClass>org.basex.BaseXGUI</mainClass>
              <arguments>
                <argument>ignore</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  
