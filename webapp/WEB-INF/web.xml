<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>BaseX: XML Backend</display-name>
	<description>HTTP Services</description>

	<context-param>
		<param-name>org.eclipse.jetty.servlet.SessionCookie</param-name>
		<param-value>XSESSIONID</param-value>
	</context-param>
	<context-param>
		<param-name>org.eclipse.jetty.servlet.SessionIdPathParameterName</param-name>
		<param-value>xsessionid</param-value>
	</context-param>

	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/rest-services</param-value>
	</context-param>

	<session-config>
		<session-timeout>1800</session-timeout>
	</session-config>



	<!-- overwrite .basex -->

	 <context-param>
		 <param-name>org.basex.dbpath</param-name>
		 <param-value>../../../data</param-value>
		</context-param>
	<context-param>
		<param-name>org.basex.repopath</param-name>
		<param-value>../../../repo</param-value> </context-param>
	<context-param>
		<param-name>org.basex.webpath</param-name>
		<param-value>../../../webapp</param-value> </context-param>

	<!-- <context-param> <param-name>org.basex.timeout</param-name> <param-value>60</param-value> 
		</context-param> -->

	<!-- Global session and servlet listener -->
	<listener>
		<listener-class>org.basex.http.SessionListener</listener-class>


	</listener>

	<listener>
		<listener-class>org.basex.http.ServletListener</listener-class>
	</listener>
	<!-- RESTXQ Service (can be deactivated by removing this entry) -->
	<servlet>
		<servlet-name>RESTXQ</servlet-name>
		<servlet-class>org.basex.http.restxq.RestXqServlet</servlet-class>
		<init-param>
			<param-name>org.basex.user</param-name>
			<param-value>admin</param-value>
		</init-param>
		<init-param>
			<param-name>org.basex.password</param-name>
			<param-value>admin</param-value>
		</init-param>


		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>REST</servlet-name>
		<servlet-class>org.basex.http.rest.RESTServlet</servlet-class>
		<init-param>
			<param-name>org.basex.user</param-name>
			<param-value>restxq</param-value>
		</init-param>
		<init-param>
			<param-name>org.basex.password</param-name>
			<param-value>restxq</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>RESTXQ</servlet-name>
		<url-pattern>/argon-restxq/restxq/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>REST</servlet-name>
		<url-pattern>/argon-rest/rest/*</url-pattern>
	</servlet-mapping>

	<!-- <servlet-mapping> <servlet-name>WEBSOCKET</servlet-name> <url-pattern>/ws/*</url-pattern> 
		</servlet-mapping> -->
	<!-- Mapping for static resources (may be restricted to a sub path) -->
	<!-- <servlet> <servlet-name>default</servlet-name> <servlet-class>org.eclipse.jetty.servlet.DefaultServlet</servlet-class> 
		<init-param> <param-name>useFileMappedBuffer</param-name> <param-value>false</param-value> 
		</init-param> <load-on-startup>0</load-on-startup> </servlet> <servlet-mapping> 
		<servlet-name>default</servlet-name> <url-pattern>/pim/static/*</url-pattern> 
		</servlet-mapping> -->

	<listener>
		<listener-class>de.axxepta.listeners.metrics.MetricsServletContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>de.axxepta.listeners.metrics.HealthCheckServletContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>metrics</servlet-name>
		<servlet-class>com.codahale.metrics.servlets.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>metrics</servlet-name>
		<url-pattern>/metrics/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Resteasy</servlet-name>
		<servlet-class>
			org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>de.axxepta.resteasy.ArgonServerApplication</param-value>

		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>Resteasy</servlet-name>
		<url-pattern>/rest-services/*</url-pattern>
	</servlet-mapping>
</web-app>
